<div class="container">
  <div class="d-flex flex-column text-center mb-5">
    <h2 class="display-6 font-weight-bold text-uppercase">Welcome {{username}}</h2>
  </div>
</div>
<div class="container-fluid position-relative bmi mb-5">
  <div class="row align-items-center">
    <div class="col-md-6">
      <div class="pr-md-3 workout-head d-md-block">
        <h4 class="text-primary">Workout Information</h4>
        <h4 class="display-4 text-white font-weight-bold mb-4">Please Enter
          Workout Info</h4>
      </div>
    </div>
    <div class="col-md-6 bg-secondary py-5">
      <div class="py-5 px-3">
        <form class="new-workout-form">
          <div class="form-row">
            <div class="col form-group">
              <input type="text" name="workout-name" class="form-control form-control-lg bg-dark text-white"
                placeholder="Workout Name" />
            </div>
          </div>
          <div class="form-row">
            <div class="col form-group">
              <input type="date" name="workout-date" class="form-control form-control-lg bg-dark text-white"
                placeholder="Date" disabled />
            </div>
            <div class="col form-group">
              <input type="text" name="workout-goal" class="form-control form-control-lg bg-dark text-white"
                placeholder="Goal" />
            </div>
          </div>
          <div class="form-row">
            <div class="col form-group">
              <input type="text" name="workout-sequence" class="form-control form-control-lg bg-dark text-white"
                placeholder="Sequence" />
            </div>
            <div class="col form-group">
              <input type="text" name="workout-muscleGroup" class="form-control form-control-lg bg-dark text-white"
                placeholder="Muscle Group" />
            </div>
          </div>
          <div class="form-row">
            <div class="col">
              <input type="submit" class="btn btn-lg btn-block btn-dark border-light savebtn" value="Save" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>
{{#if workouts.length}}
<div class="container">
  <div class="d-flex flex-column text-center mb-5">
    <h2 class="display-6 font-weight-bold">Personal Gym Space</h2>
    <h4 class="text-primary font-weight-bold">Most Recent Workouts</h4>
  </div>
</div>
<div class="tab-content mb-5">
  <div id="class-all" class="container tab-pane p-0 active">
    <div class="table-responsive">
      <table class="table table-bordered table-lg m-0">
        <thead class="bg-secondary text-white text-center">
          <tr>
            <th>Date</th>
            <th>Workout Name</th>
            <th>Goal</th>
            <th>Sequence</th>
            <th>Muscle Group</th>
          </tr>
        </thead>

        <tbody class="text-center">
          {{#each workouts as |workout|}}
          <tr>
            <th class="bg-secondary text-white align-middle">{{format_date date}}</th>
            <td>
              <h5>{{name}}</h5>
            </td>
            <td>
              <h5>{{goal}}</h5>
            </td>
            <td>
              <h5>{{sequence}}</h5>
            </td>
            <td>
              <h5>{{muscleGroup}}</h5>
            </td>
          </tr>
          {{/each}}
        </tbody>
        {{/if}}
      </table>
    </div>
  </div>
</div>
<div class="container">
  <a href="/previousworkouts" class="btn btn-lg btn-block previousbtn">Previous Workouts</a>

</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.34/moment-timezone.min.js"></script>
<script src="/javascript/add-workoutinfo.js"></script>